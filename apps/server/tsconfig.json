{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"], 
          },
    "outDir": "./dist",
    "types": [
      "node"
    ],
    "composite": true,
    "jsx": "react-jsx"
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "drizzle.config.ts"]
}
